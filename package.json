{
  "name": "@shield3/banyan",
  "version": "0.1.8",
  "description": "Banyan policy engine",
  "main": "dist/index.js",
  "scripts": {
    "build": "cargo-cp-artifact -ac  banyan_nodejs ./banyan.node -- cargo build --message-format=json-render-diagnostics",
    "build-debug": "npm run build --",
    "build-release": "npm run build -- --release",
    "test:cargo": "cargo test",
    "release-native": "npm run build-release && rm -rf native && mkdir native && mv ./banyan.node ./native/banyan.node",
    "release-js": "npx tsc",
    "test": "npm run release-native && dev=true node --loader ts-node/esm --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand"
  },
  "author": "Isaac Patka",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.8",
    "cargo-cp-artifact": "^0.1",
    "chai": "*",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.11"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "binary": {
    "module_name": "banyan",
    "module_path": "./native",
    "host": "https://github.com/0xShield3/banyan/releases/download/",
    "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}-{libc}.tar.gz",
    "remote_path": "v{version}"
  }
}
